{
     "languageserver": {
         "ccls": {
             "command": "ccls",
             "filetypes": ["c", "cpp", "cuda"],
             "rootPatterns": [".git/", "build/", ".ccls-root"],
             "initializationOptions": {
                 "compilationDatabaseDirectory": "build",
                 "client": {
                     "snippetSupport": true
                 },
                 "cache": {
                     "directory": "/tmp/ccls"
                 },
                 "index": {
                     "onChange": true
                 },
                 "highlight": {
                     "lsRanges": true
                 }
             }
        }
    }
}
