{
    "suggest.noselect": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda"],
            "rootPatterns": [".tasks", ".git/", "build/"],
            "initializationOptions": {
                "compilationDatabaseDirectory": "build",
                "client": {
                    "snippetSupport": true
                },
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        }
    }
}
